- link = pagy_link_proc(pagy)

nav.pagy_nav.pagination.mt-2.text-base role="navigation" aria-label="pager"

  - if pagy.prev
    span.page.prev.text-gray-600.hover:text-gray-800 ==> link.call(pagy.prev, pagy_t('pagy.nav.prev'), 'aria-label="previous"')
  - else
    span.page.prev.disabled.text-gray-600 ==> pagy_t('pagy.nav.prev')

  - pagy.series.each do |item|        # series example: [1, :gap, 7, 8, "9", 10, 11, :gap, 36]
    - if item.is_a?(Integer)          # page link
      span.page.text-gray-600.hover:text-gray-800 ==> link.call(item)

    - elsif item.is_a?(String)        # current page
      span.page.current.text-gray-600 ==> item

    - elsif item == :gap              # page gap
      span.page.gap ==> pagy_t('pagy.nav.gap')

  - if pagy.next
    span.page.next.text-gray-600.hover:text-gray-800 == link.call(pagy.next, pagy_t('pagy.nav.next'), 'aria-label="next"')
  - else
    span.page.next.disabled.text-gray-600 == pagy_t('pagy.nav.next')
